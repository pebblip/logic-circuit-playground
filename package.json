{
  "name": "logic-circuit-playground",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive logic circuit builder and simulator",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build",
    "build:no-typecheck": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:performance": "vitest run src/performance/largeCircuit.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --headless",
    "validate:gallery": "node scripts/validate-gallery-circuits.js",
    "check:gallery": "npm run validate:gallery",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "quality:metrics": "node scripts/quality-metrics.js",
    "quality:gate": "npm run typecheck && npm run lint && npm run test tests/core/ tests/adapters/ --run && npm run quality:metrics",
    "ci:basic": "npm run typecheck && npm run lint && npm run test tests/core/ tests/adapters/ --run",
    "ci:integration": "npm run ci:basic && npm run test tests/integration/ --run && npm run validate:gallery",
    "ci:deployment": "npm run ci:integration && npm run build && npm run test:e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "framer-motion": "^12.12.2",
    "immer": "^10.1.1",
    "lucide-react": "^0.511.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.5.0",
    "react-resizable": "^3.0.5",
    "react-router-dom": "^7.6.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.22",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "chromatic": "^12.0.0",
    "cypress": "^14.4.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "storybook": "8.6.14",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "vite": "^5.0.8",
    "vitest": "^3.1.4"
  }
}
